###!/usr/bin/env bash

case_output () {
case $OUTPUT_STYLE in
    quiet)
    PRINT=':'
    ;;
    *)
    true
    ;;
esac #OUTPUT_STYLE
}

case_debug () {
## PURPOSE: 
##   - set shell debug parameters
##   - set print modes for output

[ -z $DEBUG ] && DEBUG=0
set -a

case $DEBUG in
	0|False|false)
    PRINT_MODE=normal
    MESSAGE_PREFIX="##>"
    PRINT="echo $MESSAGE_PREFIX"
    case_output
	;;

	1|True|true)
    PRINT_MODE=debug
    unset MESSAGE_PREFIX
    PRINT=':'
    case_output
	set -o xtrace
	: $0 : DEBUG_ACTIVE
	;;
esac #DEBUG

} ## case_debug
