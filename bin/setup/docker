#!/usr/bin/env bash

## PURPOSE: setup docker service and tools

## REF: https://docs.docker.com/engine/install/

## NOTE: a simplified version of the get.docker.com convenience script, still self contained for use via curl


[ "$EUID" = 0 ] || SUDO="sudo -EH"

type apt &>/dev/null && export PKG_TYPE=apt
type yum &>/dev/null && export PKG_TYPE=yum

set -e

PKG_TYPE=${PKG_TYPE:?required}
[ "$PKG_TYPE" = "apt" ] && $SUDO apt-get update

. /etc/os-release

## TODO: write custom config
# [ -e /etc/docker/daemon.json ] || write_template

## check for dedicated volume
( mount | grep docker ) || { echo "ERROR: a dedicated volume is required for best results"; exit 1; }
## TODO: check filesystem type

unset version
[ -z $DOCKER_VERSION ] || version="-${DOCKER_VERSION}"
[ $DOCKER_VERSION = "latest" ] && unset version

case $PKG_TYPE in

	apt)
	# prerequisites
	export DEBIAN_FRONTEND=noninteractive
	$SUDO apt-get -y install \
		apt-transport-https \
		ca-certificates \
		curl \
		gnupg \
		lsb-release
	# configure repos
	curl -fsSL https://download.docker.com/linux/$ID/gpg | $SUDO gpg --dearmor -o /usr/share/keyrings/docker-archive-keyring.gpg
	echo \
	"deb [arch=amd64 signed-by=/usr/share/keyrings/docker-archive-keyring.gpg] https://download.docker.com/linux/$ID \
	$(lsb_release -cs) stable" | $SUDO tee /etc/apt/sources.list.d/docker.list > /dev/null
	$SUDO apt-get update
	# uninstall old packages
	$SUDO apt-get -y remove docker docker-engine docker.io containerd runc
	# add packages
	$SUDO apt-get -y install docker-ce${version} docker-ce-cli${version} containerd.io
	;;

	yum)
	# prerequisites
 	$SUDO yum install -y yum-utils curl
	# configure repos
	$SUDO yum-config-manager \
		--add-repo \
		https://download.docker.com/linux/$ID/docker-ce.repo
	# uninstall old versions
	$SUDO yum -y remove docker \
                  docker-client \
                  docker-client-latest \
                  docker-common \
                  docker-latest \
                  docker-latest-logrotate \
                  docker-logrotate \
                  docker-engine
	# add packages
	$SUDO yum install -y docker-ce${version} docker-ce-cli${version} containerd.io
	;;

esac #PKG_TYPE

## TODO: set/check experimental mode
## TODO: set/check daemon options

# start+enable service
$SUDO systemctl start docker
$SUDO systemctl enable docker 
$SUDO systemctl enable containerd

# check installation
$SUDO docker run hello-world
$SUDO docker context list
$SUDO docker info

# add caller to docker group
[ -z $SUDO ] || $SUDO gpasswd -a $LOGNAME docker
 
# add compose
## REF: https://gist.github.com/deviantony/2b5078fe1675a5fedabf1de3d1f2652a
DOCKER_COMPOSE_LATEST_VERSION=$(curl -s https://api.github.com/repos/docker/compose/releases/latest | grep 'tag_name' | cut -d\" -f4)
DOCKER_COMPOSE_VERSION=${DOCKER_COMPOSE_VERSION:-$DOCKER_COMPOSE_LATEST_VERSION} ## use latest if no version is specified
[ $DOCKER_COMPOSE_VERSION = "latest" ] && DOCKER_COMPOSE_VERSION=${DOCKER_COMPOSE_LATEST_VERSION} ## if latest is specified
curl -L "https://github.com/docker/compose/releases/download/$DOCKER_COMPOSE_VERSION/docker-compose-$(uname -s)-$(uname -m)" -o ${TMP_DIR}/docker-compose
[ -z $SUDO ] || $SUDO cp ${TMP_DIR}/docker-compose /usr/local/bin/docker-compose && $SUDO chmod 755 /usr/local/bin/docker-compose
## TODO: pass installation location - HOME / WORKSPACE / XDG.local ??
[ -d $WORKSPACE/bin ] && cp ${TMP_DIR}/docker-compose

docker-compose --version

# add compose bash completions
curl -L https://raw.githubusercontent.com/docker/compose/${DOCKER_COMPOSE_VERSION}/contrib/completion/bash/docker-compose -o ${TMP_DIR}/docker-compose-bash-completions
$SUDO cp ${TMP_DIR}/docker-compose-bash-completions /etc/bash_completion.d/docker-compose
